<Window x:Class="BuildingSource.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BuildingSource"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="MainWindow" Height="450" Width="800">
    <Grid Name="Root">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="150*"/>
            <RowDefinition Height="40*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Margin="10,10,10,10">
            <TextBlock Text="ТАРИФЫ" FontWeight="Bold"/>
        </StackPanel>

        <!--Выгрузка объектов из БД-->

        <Grid Grid.Row="2" Grid.Column="0" Margin="0,20,0,0">
            <Button Content="Калькулятор ремонта" Name="GoToCalc" Click="GoToCalc_Click_1" Width="300" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        </Grid>

    </Grid>
</Window>

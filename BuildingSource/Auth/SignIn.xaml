<Window x:Class="BuildingSource.Auth.SignIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BuildingSource.Auth"
        mc:Ignorable="d"
        Title="SignIn" Height="450" Width="800">
    <Grid HorizontalAlignment="Center">

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">

            <TextBlock Text="Авторизация" FontWeight="Bold"/>

            <Label Content=" "/>

            <TextBlock Text="Логин:"/>

            <TextBox Width="500" Name="LoginTextBox"/>
            
            <TextBlock Text="Пароль:"/>

            <TextBox Width="500" Name="PasswordTextBox"/>

            <Button Name="SignInButton" Content="Войти" Click="SignInButton_Click"/>
            
            <Button Name="GoToSignUpButton" Content="Создать учетную запись ->" Click="GoToSignUpButton_Click"/>

        </StackPanel>
        
    </Grid>
</Window>
